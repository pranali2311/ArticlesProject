extends layout

block content
    br
    br
    br
    h1 #{article.title}
    h5 Written by #{article.author}
    p= article.body
    hr
    a.btn.btn-default(href='/article/edit/'+article._id) Edit  <!--href tells where it will go on clicking the button-->
    a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete